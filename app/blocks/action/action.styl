.action
  font-family 'PlayfairDisplay'
  &__title
    font-size 60px
    font-weight 400
    line-height 20px
    text-align center
    padding-top 90px
  &__block
    width 1040px
    margin 40px auto 0
    display flex
    justify-content space-around
  &__section
    width 450px
  &__subheader
    font-size 22px
    font-weight 400
    line-height 29px
    text-transform uppercase
    text-align center
    padding 20px 0
    border-top 1px solid #000
    border-bottom 1px solid #000
  &__text
    font-size 16px
    font-weight 400
    line-height 24px
    margin 20px 0 28px
    text-align center
  &__img
    width 450px
    height 420px

@media screen and (max-width: 1280px)
  .action
    &__title
      font-size 50px
      padding-top 60px
    &__block
      width 780px
    &__subheader
      font-size 20px
    &__section
      width 370px
    &__img
      width 370px
      height 340px

@media screen and (max-width: 1023px)
  .action
    &__title
      font-size 35px
      padding-top 60px
    &__block
      width 90%
      display block
    &__section
      width 90%
      margin 0 auto 25px
    &__img
      margin 0 auto
      display block

@media screen and (max-width: 767px)
  .action
    &__title
      font-size 28px
    &__block
      margin-top 20px
      width 80%
    &__section
      width 100%
    &__subheader
      font-size 14px
      width 100%
    &__item
      width 80%
    &__img
      width 100%
      max-width 450px
      height 300px
    &__text
      font-size 14px