.action
  font-family 'PlayfairDisplay'
  &__title
    font-size 55px
    font-weight 400
    line-height 20px
    text-align center
    padding-top 60px
  &__block
    width 1070px
    margin 40px auto 0
    display flex
    justify-content space-around
  &__section
    width 400px
  &__subheader
    font-size 22px
    font-weight 400
    line-height 29px
    text-transform uppercase
    text-align center
    padding 20px 0
    border-top 1px solid #000
    border-bottom 1px solid #000
  &__text
    font-size 16px
    font-weight 400
    line-height 24px
    margin 20px 0 28px
    text-align center
  &__img
    width 400px
    height 420px