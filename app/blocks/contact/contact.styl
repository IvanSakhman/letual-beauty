.contact
  font-family 'PlayfairDisplay'
  width 100%
  &__title
    font-size 72px
    font-weight 400
    line-height 24px
    padding-top 98px
    text-align center
    padding-bottom 34px
    border-bottom 2px solid #000
    width 810px
    margin 0 auto
  &__img
    width 95%
    max-width 1556px
    margin 30px auto 0
    position relative
    left 50%
    transform translateX(-50%)
  &__info
    width 316px
    margin 64px auto 75px
    font-size 24px
    font-weight 400
    line-height 24px
    text-align center
  &__work
    margin-top 25px
  &__email
    margin-top 25px