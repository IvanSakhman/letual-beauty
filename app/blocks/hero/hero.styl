.hero
  padding-top 80px
  display block
  overflow hidden
  width 100%
  &__img
    width 100%
    height auto

#slideshow
  width 100%
  height 30vw
  overflow hidden

#slideshow > div
  height 30vw
  overflow hidden

@media screen and (max-width: 1023px)
	.hero
		padding-top 45px
		display block
		overflow hidden
		width 100%
  		&__img
    		width 100%

