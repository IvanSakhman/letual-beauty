mixin header()
	section.header&attributes(attributes)
		img.header__logo(src="assets/img/logo.png" alt="logo")
		ul.header__menu
			li.header__item
				a.header__link(href="#") ПРО НАС
			li.header__item
				a.header__link(href="#") ПОСЛУГИ
			li.header__item
				a.header__link(href="#") АКЦІЇ
			li.header__item
				a.header__link(href="#") КОНТАКТИ
		select.header__language
			option.header__lang UA
			option.header__lang EN
			option.header__lang PL
			option.header__lang RU
