.header
  display block
  position fixed
  height 113px
  width 100%
  background #fff
  z-index: 10
  &__logo
    position absolute
    top 0
    left 4%
    width 142px
  &__menu
    top 50%
    position absolute
    left 50%
    transform translate(-50%,-50%)
  &__item
    display inline-block
    margin 0 5px
  &__link
    font-family 'PlayfairDisplay'
    font-size 24px
    font-weight 400
    line-height 29px
    text-transform uppercase
    color #000
    text-decoration none
    padding 5px
  &__language
    right: 4.5%
    background #fff
    border-radius 0
    border none
    position absolute
    top 50%
    transform translateY(-50%)

@media screen and (max-width: 1023px)
  .header
    display: none