.brand
  display
  &__title
    font-family 'PlayfairDisplay'
    padding 135px 0 41px
    font-size 55px
    font-weight 400
    line-height 24px
    text-align center
    width 810px
    margin 0 auto
    border-bottom 2px solid #000
  &__emblems
    max-width 1255px
    width 95%
    margin 0 auto
    border-bottom 2px solid #000
    display flex
    justify-content space-around
  &__item
    width 150px
    height 150px
    position relative
  &__pic
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
