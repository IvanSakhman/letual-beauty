.about
  width 100%
  font-family 'PlayfairDisplay'
  &__content
    padding-top 145px
  &__title
    font-size 72px
    font-weight 400
    line-height 29px
    text-transform uppercase
    text-align center
  &__subheader
    font-size 26px
    font-weight 400
    line-height 29px
    text-transform uppercase
    border-top 2px solid black
    border-bottom 2px solid black
    width 810px
    text-align center
    margin 45px auto 0
    padding 34px 0
  &__info
    width 90%
    margin 0 auto
    text-align center
    font-size 18px
    font-weight 400
    line-height 24px
    margin-top 36px
    max-width 1390px
  &__block
    width 954px
    height 477px
    margin 90px auto 0
    &_service
      height 1120px
  &__item
    &_welcome
      width 477px
      height 100%
      background-color #222
      float left
    &_pic
      float left
      height 100%
  &__slogan
    font-size 30px
    font-weight 400
    line-height 30px
    width 225px
    color #fff
    margin 68px auto 0
    padding-bottom 29px
    border-bottom 3px solid white
    text-align center
  &__text
    color white
    font-size 18px
    font-weight 400
    line-height 24px
    width 390px
    margin 62px auto 0
    text-align center
  &__item
    position relative
    width 475px
    height 560px
    float left
  &__service
    position absolute
  &__border
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    width 444px
    height 532px
    border 2px solid #fff
  &__desc
    position absolute
    font-size 56px
    font-weight 400
    line-height 60px
    color #fff
    top 50%
    left 50%
    transform translate(-50%,-50%)
    text-align center
