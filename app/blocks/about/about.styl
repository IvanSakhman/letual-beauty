.about
  width 100%
  font-family 'PlayfairDisplay'
  &__content
    padding-top 120px
  &__title
    font-size 55px
    font-weight 400
    line-height 29px
    text-transform uppercase
    text-align center
  &__subheader
    font-size 20px
    font-weight 400
    line-height 29px
    text-transform uppercase
    border-top 2px solid black
    border-bottom 2px solid black
    width 600px
    text-align center
    margin 45px auto 0
    padding 20px 0
  &__info
    width 90%
    margin 0 auto
    text-align center
    font-size 16px
    font-weight 400
    line-height 24px
    margin-top 36px
    max-width 1390px
  &__block
    width 800px
    height 440px
    margin 60px auto 0
    &_service
      height 840px
  &__item
    width 360px
    &_welcome
      width 360px
      height 100%
      background-color #222
      float left
    &_pic
      float left
      height 100%
  &__slogan
    font-size 22px
    font-weight 400
    line-height 30px
    width 225px
    color #fff
    margin 48px auto 0
    padding-bottom 20px
    border-bottom 2px solid white
    text-align center
  &__text
    color white
    font-size 16px
    font-weight 400
    line-height 24px
    width 360px
    margin 40px auto 0
    text-align center
  &__item
    position relative
    width 400px
    height 420px
    float left
  &__service
    position absolute
    width 100%
    height 100%
  &__border
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    width 94%
    height 94%
    border 2px solid #fff
  &__desc
    position absolute
    font-size 36px
    font-weight 400
    line-height 60px
    color #fff
    top 50%
    left 50%
    transform translate(-50%,-50%)
    text-align center
