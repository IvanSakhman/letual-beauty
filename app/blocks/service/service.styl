.service
  display block
  width 100%
  padding-top 80px
  &:after
    content ""
    clear both
    display table
  &__layout
    width 100%
    height 740px
  &__pic
    width 50%
    height 100%
    float left
    min-height 550px
    overflow hidden
    &_right
      float right
  &__img
    min-width 100%
    min-height 100%
  &__container
    width 50%
    height 100%
    float right
    background url("../img/service/hair_under.png") no-repeat;
    background-size cover
    font-family 'PlayfairDisplay'
    &_left
      float left
    &_makeup
      background url("../img/service/makeup_under.png") no-repeat;
      background-size cover
    &_cosmetology
      background url("../img/service/cosmetology_under.png") no-repeat;
      background-size cover
    &_nail
      background url("../img/service/nail_under.png") no-repeat;
      background-size cover
  &__white
    background-color rgba(256,256,256,0.7)
    height 100%
    width1 100%
  &__wrapper
    padding 80px 0 0 80px
    width 502px
  &__title
    font-size 35px
    font-weight 400
    line-height 12px
  &__block
    margin-top 20px
  &__subtitle
    font-size 22px
    font-weight 400
    line-height 18px
    text-transform uppercase
    padding 10px 0
    border-top 1px solid black
    border-bottom 1px solid black
    margin-bottom 15px
  &__item
    clear both
    margin-top 5px
    &:after
      content ""
      clear both
      display table
  &__name,
  &__price
    font-size 16px
    font-weight 400
    line-height 18px
    text-transform uppercase
  &__name
    float left
  &__price
    float right
    margin-right 40px
